{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["esnext"],
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./tsc-build"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
